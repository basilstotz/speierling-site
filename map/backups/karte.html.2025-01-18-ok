  <script>
    let offline=false; 
    const urlParams = new URLSearchParams(location.search);
    for (const [key, value] of urlParams) {
        //console.log(`${key}:${value}`);
        switch(key){
           case 'offline':
                offline=true;
                break;
           default:
                break;
         }
    }
  </script>

